<h1>Lista Usuarios</h1>
<div class="table-responsive">
<table class ="table table-hover table-bordered table-condensed" >
  <thead>
    <tr>
      <th>username</th>
      <th>email</th>
      <th>admin</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Ver',  user, :class => "btn btn-sm btn-info" %></td>
        <td><%= link_to 'Editar', edit_user_path(user), :class => "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Eliminar', user,:class =>"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Seguro que quieres Eliminar' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nuevo usuario', new_user_path,:class => "btn btn-success btn-sm" %>
