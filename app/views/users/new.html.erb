<h1>Crear cuenta</h1>

<%= nested_form_for @user do |f| %>
  <%= form_errors_for @user %>
  <div class="container" >
 
    <div class="col-md-8 col-md-offset-5">
      
    <div class="field form-group">
      
 
        <div class="col-xs-3">
          <%= f.text_field :username, :required => true ,:class => "form-control", :placeholder=> "Nombre de usuario"%>
        </div>
    
</div>
    <div class="field form-group">
       <div class="col-xs-3">
        <%= f.text_field :email,:class => "form-control", :placeholder=>"Email" %>
        </div>
   </div>

   <div class="field form-group">
       <div class="col-xs-3">
        <%= f.password_field :password,:class => "form-control", :placeholder=>"Contraseña" %>
        </div>
   </div>

  <div class="field form-group">
    <div class="col-xs-3">
     <%= f.password_field :password_confirmation,:class=>"form-control", :required => true,:placeholder=>"Repita su contraseña"   %>
    </div>
  </div>

    <% for i in 1..3 %>
    <%= f.fields_for :questions, :wrapper => false do |question| %>
      <div class="field form-group">
        <div class="col-xs-3">
          <%= question.text_field :pregunta,:class=>"form-control", :required => true,:placeholder => "Pregunta #{i}"   %>
        </div>
      </div>
      <div class="field form-group">
        <div class="col-xs-3">
        <%= question.text_field :respuesta, :required => true,:class=>"form-control" ,:placeholder => "Respuesta #{i}"   %>
      </div>
      </div>
    <% end %>
    <% end %>
  

  <div class="field form group">
    <%= f.fields_for :fruit do |fruit| %>
      <div class="field form group">
        <%= fruit.label :nombre, "Escoja una fruta" %>
        <%= fruit.select :nombre, options_for_select([['Manzana'], ['Pera'], ['Naranja'], ['Uva'],  ['Limón']]) %>
      </div>
    <% end %>
  </div>
  <div class ="center-block">
  <div class="actions"><%= f.submit %></div>
</div>
<% end %>

</div>
